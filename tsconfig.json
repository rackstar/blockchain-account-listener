{
  "compilerOptions": {
    "target": "ES2019",
    "moduleResolution": "Node16",
    "module": "Node16",
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strict": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
